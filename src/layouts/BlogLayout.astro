---
const { title, date, author, tags, image } = Astro.props;
---
<html lang="en">
  <head>
    <title>{title ? `${title} | R Beats Python` : 'Blog | R Beats Python'}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="bg-gray-50 min-h-screen text-blue-gray-900">
    <header class="bg-white shadow sticky top-0 z-20">
      <nav class="max-w-4xl mx-auto flex items-center justify-between px-6 py-4">
        <a href="/" class="text-2xl font-bold text-blue-700 hover:underline">R Beats Python</a>
        <div class="flex gap-6">
          <a href="/" class="text-blue-gray-700 hover:text-blue-700 font-medium">Home</a>
          <a href="/blog/" class="text-blue-700 font-semibold underline">Blog</a>
        </div>
      </nav>
    </header>
    <main class="max-w-3xl mx-auto px-4 py-10">
      {image && <img src={image} alt={title} class="rounded-xl w-full max-h-80 object-cover mb-8 shadow" />}
      <h1 class="text-4xl font-extrabold mb-2 text-blue-gray-900">{title}</h1>
      <div class="flex flex-wrap items-center gap-4 mb-6 text-sm text-gray-500">
        {date && <span>{new Date(date).toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: 'numeric' })}</span>}
        {author && <span>By {author}</span>}
        {tags && Array.isArray(tags) && tags.length > 0 && (
          <span class="flex flex-wrap gap-2">
            {tags.map(tag => (
              <span class="bg-blue-100 text-blue-700 px-2 py-0.5 rounded text-xs font-medium">{tag}</span>
            ))}
          </span>
        )}
      </div>
      <article class="prose prose-blue max-w-none prose-lg bg-white p-8 rounded-xl shadow">
        <slot />
      </article>
    </main>
    <footer class="bg-white border-t mt-12 py-6 text-center text-gray-500 text-sm">
      &copy; {new Date().getFullYear()} oppkey. Made for a better web.
    </footer>
  </body>
</html> 